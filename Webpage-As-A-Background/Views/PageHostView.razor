@using Microsoft.JSInterop;
@inject IJSRuntime JS

<style>
    body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    iframe {
        width: 100%;
        height: 100%;
        border: 0;
    }
</style>

<iframe id="frame" class="vh-100" src="http://localhost:@pageHost.Port"></iframe>

<script>
    function ForceReloadFrame() {
        document.getElementById('frame').src += '';
    }
</script>

@code {
    [Parameter]
    public PageHost pageHost { get; set; }

    protected override async Task OnInitializedAsync()
    {
        pageHost.OnRefreshFrame += OnRefreshFrameHandler;
    }

    private async void OnRefreshFrameHandler(object? sender, RefreshFrameArgs args)
    {
        await JS.InvokeVoidAsync("ForceReloadFrame");
    }
}
